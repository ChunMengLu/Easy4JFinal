<!DOCTYPE mapper PUBLIC "-//dreamlu.net//DTD Mapper 1.0//ZH" "http://blog.dreamlu.net/dtd/jfinal/xml_sql_1.0.dtd">
<mapper namespace="net.dreamlu.model.UserModel">
	<sql id="findByName">
		<select>
			select *
		</select>
		<ext>
			from user where name = ?
		</ext>
	</sql>
	<!-- 
	<sql id="findByAge">
		select * from user where age = ?
	</sql>
	 -->
</mapper>

